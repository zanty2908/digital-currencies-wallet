<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <item>
        <shape>
            <gradient
                android:angle="90"
                android:endColor="#05000000"
                android:startColor="#1B000000"
                android:type="linear" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="0dp" />

            <corners android:radius="@dimen/spacing_medium" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/spacing_medium" />
            <solid android:color="@color/backgroundItemHeaderColor" />
        </shape>
    </item>
</layer-list>
